#include <iostream>
using namespace std;
int main(){
    int nilai;
    float nilai1, nilai2, nilai3, totalnilai;
    cout<<"Masukkan nilai tugas =";cin>>nilai1;
    if (nilai1 >100){
        cout<<"Nilai tidak boleh melebihi 100"<<endl;
    }
    cout<<"Masukkan nilai UTS =";cin>>nilai2;
     if (nilai2 >100){
        cout<<"Nilai tidak boleh melebihi 100"<<endl;
    }
    cout<<"Masukkan nilai UAS =";cin>>nilai3;
     if (nilai3 >100){
        cout<<"Nilai tidak boleh melebihi 100"<<endl;
    }
    totalnilai=(nilai1*0.3+nilai2*0.3+nilai3*0.4);
    cout<<"Total nilai ="<<totalnilai<<endl;
    }
